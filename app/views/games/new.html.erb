<h1>New Game</h1>

<ul class="letters">
  <% @letters.each do |letter| %>
    <li><%= letter %></li>
  <% end %>
</ul>

<p>What's the longest word you can find?</p>

<form action="score" method='POST' class="form-inline">
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
  <%#= hidden_field_tag :letters, @letters %>
  <input type="text" name="word" class="form-control">
  <input type="hidden" name="letters" value="<%= @letters.split %>">
  <%= hidden_field_tag :start_time, Time.now %>
  <input type="submit" value="Play" class="btn btn-default">
</form>
